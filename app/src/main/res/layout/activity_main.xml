<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="five_clicked"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/button_four"
        app:layout_constraintEnd_toEndOf="@+id/button_eight"
        app:layout_constraintStart_toStartOf="@+id/button_eight"
        app:layout_constraintTop_toTopOf="@+id/button_four"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_seven"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:onClick="seven_clicked"
        android:text="7"
        app:layout_constraintEnd_toEndOf="@+id/button_sin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_sin"
        app:layout_constraintTop_toBottomOf="@+id/button_sin" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="zero_clicked"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/button_two"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:onClick="one_clicked"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/button_four"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_four"
        app:layout_constraintTop_toBottomOf="@+id/button_four" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:onClick="four_clicked"
        android:text="4"
        app:layout_constraintEnd_toEndOf="@+id/button_seven"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_seven"
        app:layout_constraintTop_toBottomOf="@+id/button_seven" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="two_clicked"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/button_one"
        app:layout_constraintEnd_toEndOf="@+id/button_five"
        app:layout_constraintStart_toStartOf="@+id/button_five"
        app:layout_constraintTop_toTopOf="@+id/button_one" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:onClick="dot_clicked"
        android:text="."
        app:layout_constraintBottom_toBottomOf="@+id/button_zero"
        app:layout_constraintEnd_toStartOf="@+id/button_add"
        app:layout_constraintStart_toStartOf="@+id/button_three"
        app:layout_constraintTop_toTopOf="@+id/button_zero" />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="eight_clicked"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/button_seven"
        app:layout_constraintEnd_toEndOf="@+id/button_cos"
        app:layout_constraintStart_toStartOf="@+id/button_cos"
        app:layout_constraintTop_toTopOf="@+id/button_seven"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_output"
        android:layout_width="294dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|right|center_vertical"
        android:textAlignment="gravity"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="six_clicked"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/button_five"
        app:layout_constraintEnd_toEndOf="@+id/button_nine"
        app:layout_constraintStart_toStartOf="@+id/button_nine"
        app:layout_constraintTop_toTopOf="@+id/button_five" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="equals_clicked"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@+id/button_dot"
        app:layout_constraintEnd_toEndOf="@+id/button_add"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_add"
        app:layout_constraintTop_toTopOf="@+id/button_dot"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="three_clicked"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/button_two"
        app:layout_constraintEnd_toEndOf="@+id/button_six"
        app:layout_constraintStart_toStartOf="@+id/button_six"
        app:layout_constraintTop_toTopOf="@+id/button_two" />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="nine_clicked"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/button_eight"
        app:layout_constraintEnd_toEndOf="@+id/button_tan"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_tan"
        app:layout_constraintTop_toTopOf="@+id/button_eight"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="multiply_clicked"
        android:text="ร"
        app:layout_constraintBottom_toBottomOf="@+id/button_nine"
        app:layout_constraintEnd_toEndOf="@+id/button_divide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_nine"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="minus_clicked"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/button_six"
        app:layout_constraintEnd_toEndOf="@+id/button_multiply"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_multiply"
        app:layout_constraintTop_toTopOf="@+id/button_six"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="add_clicked"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/button_three"
        app:layout_constraintEnd_toEndOf="@+id/button_minus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_minus"
        app:layout_constraintTop_toTopOf="@+id/button_three"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="65dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:onClick="divide_clicked"
        android:text="รท"
        app:layout_constraintBottom_toBottomOf="@+id/button_tan"
        app:layout_constraintEnd_toEndOf="@+id/textview_output"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_tan"
        app:layout_constraintTop_toTopOf="@+id/button_tan"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_sin"
        android:layout_width="62dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:onClick="sin_clicked"
        android:text="sin"
        app:layout_constraintStart_toStartOf="@+id/textview_output"
        app:layout_constraintTop_toBottomOf="@+id/textview_output" />

    <Button
        android:id="@+id/button_cos"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:onClick="cos_clicked"
        android:text="cos"
        app:layout_constraintBottom_toBottomOf="@+id/button_sin"
        app:layout_constraintStart_toEndOf="@+id/button_sin"
        app:layout_constraintTop_toTopOf="@+id/button_sin"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_tan"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:onClick="tan_clicked"
        android:text="tan"
        app:layout_constraintBottom_toBottomOf="@+id/button_cos"
        app:layout_constraintStart_toEndOf="@+id/button_cos"
        app:layout_constraintTop_toTopOf="@+id/button_cos"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="212dp"
        android:onClick="clear"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/barrier"
        app:layout_constraintEnd_toEndOf="@+id/button_equals"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_zero"
        app:layout_constraintTop_toBottomOf="@+id/button_zero" />

</androidx.constraintlayout.widget.ConstraintLayout>